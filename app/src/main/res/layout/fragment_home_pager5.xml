<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    android:background="@drawable/drawable_lighter_grey_bg"
    android:backgroundTint="@color/light_gray"
    tools:context=".ui.home.viewpagerfragment.HomePagerFragment5">

    <ImageView
        android:id="@+id/imgPreciousHeader"
        style="@style/HomePagingImgStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_no_foreign_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#FFFFFF"
        app:riv_border_width="2dp"
        app:riv_corner_radius="20dp" />


    <TextView
        android:id="@+id/txtPrecious"
        style="@style/HomePagingTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Döviz Hesapları"
        app:layout_constraintStart_toStartOf="@id/imgPreciousHeader"
        app:layout_constraintTop_toBottomOf="@id/imgPreciousHeader" />

    <TextView
        android:id="@+id/txtExample"
        style="@style/HomePagingDescTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Dolar, Euro)"
        app:layout_constraintStart_toStartOf="@id/txtPrecious"
        app:layout_constraintTop_toBottomOf="@id/txtPrecious" />


    <Button
        android:id="@+id/btnWithdraw"
        style="@style/HomePagingButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="24dp"
        android:drawableEnd="@drawable/ic_investment_notification_black"
        android:text="Gelince Haber Ver"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/img_no_foreign_currency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgPreciousHeader" />


</androidx.constraintlayout.widget.ConstraintLayout>