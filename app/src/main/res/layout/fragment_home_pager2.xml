<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    android:background="@drawable/drawable_lighter_grey_bg"
    android:backgroundTint="@color/light_gray"
    tools:context=".ui.home.viewpagerfragment.HomePagerFragment2">

    <ImageView
        style="@style/HomePagingImgStyle"
        android:id="@+id/imgPreciousHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_precious_metal_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#FFFFFF"
        app:riv_border_width="2dp"
        app:riv_corner_radius="20dp" />


    <TextView
        android:id="@+id/txtPrecious"
        style="@style/HomePagingTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/investment_semi_bold"
        android:text="Kıymetli\nMadenler"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/imgPreciousHeader"
        app:layout_constraintTop_toBottomOf="@id/imgPreciousHeader" />

    <TextView
        style="@style/HomePagingDescTextStyle"
        android:id="@+id/txtExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Altın, Gümüş, Platin)"
        app:layout_constraintStart_toStartOf="@id/txtPrecious"
        app:layout_constraintTop_toBottomOf="@id/txtPrecious" />


    <Button
        android:id="@+id/btnWithdraw"
        style="@style/HomePagingButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="24dp"
        android:drawableEnd="@drawable/abc_ic_go_search_api_material"
        android:text="Kıymetli Madenler Hesabı Aç"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/img_no_precious_metal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgPreciousHeader" />


</androidx.constraintlayout.widget.ConstraintLayout>